<div class="container">
	<h1>スレッド一覧</h1>
	<div class="row">

	<table class="table table-hover">
		<thead>
			<tr>
				<th>タイトル</th>
			</tr>
		</thead>
		<% @post_threads.each do |thread| %>
		<tbody>
			<tr>
				<td><%= link_to thread.title, post_thread_path(thread.id) %><i class="float-right"><%= "コメント：#{thread.post_comments.count}" %></i></td>
			</tr>
		</tbody>
		<% end %>
	</table>
	</div>
</div>